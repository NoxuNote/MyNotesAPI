{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "noUnusedLocals": true,
      "declaration": false,
      "pretty": true,
      "strictNullChecks": true,
      "skipLibCheck": true,
      "strictPropertyInitialization": true,
      "outDir": "./dist/",
      "sourceMap": true
    },
    "include": [
      "./**/*",
      "./api/openapi.yaml"
    ],
    "exclude": ["node_modules", "**/*.spec.ts"]
    }